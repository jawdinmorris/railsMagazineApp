<%= render 'nav' %>
<div class="container">
  <div class="jumbotron">
    <h1>
      <%= @article.title %>
    </h1>
    <h2>
      <%= @article.user.first_name %> <%= @article.user.second_name %>
    
    </h2>
  </div>

  <div class="container">
    <p>
      <%= @article.content %>
    </p>
  </div>
  <ul class="list-group">
    <li class="list-group-item"><%= link_to 'Edit', edit_article_path(@article) %></li>
    <li class="list-group-item"><%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  </ul>

</div>
